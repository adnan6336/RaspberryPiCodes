systemctl stop timeSync
systemctl disable timeSync

systemctl disable systemd-timesyncd.service
apt-get remove -y ntp

rm /home/pi/RTC

cat /home/pi/rc.temp > /etc/rc.local

echo "dtoverlay=i2c-rtc,ds3231" >> /boot/config.txt
apt-get -y remove fake-hwclock
update-rc.d -f fake-hwclock remove
systemctl disable fake-hwclock

sed -i '7,9 s/^/#/' /lib/udev/hwclock-set
sed -i '29 s/^/#/' /lib/udev/hwclock-set
sed -i '32 s/^/#/' /lib/udev/hwclock-set


apt-get install -y ntp


date

echo
read -p "Is the time above correct? y/n " ANS

if [ $ANS = 'y' ] || [ $ANS = 'Y' ]; then
echo "Time OK"
else
echo; echo "Please connect to the internet"
echo "or GPS to get correct time"; echo
exit 0
fi

hwclock -w
